{
  "name": "blumilksoftware/internships",
  "description": "todo",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Internships\\": "backend/"
    }
  },
  "require": {
    "php": "^8.0",
    "php-di/php-di": "^6.3.4",
    "php-http/guzzle7-adapter": "^1.0",
    "geocoder-php/common-http": "^4.4.0",
    "geocoder-php/mapbox-provider": "^1.3",
    "vlucas/phpdotenv": "^v5.3.0"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^0.4.3"
  },
  "scripts": {
    "build": [
      "rm -rf ./public/api",
      "sh -c 'cd backend && php index.php'"
    ],
    "populate": [
      "sh -c 'cd backend && php index.php -r'"
    ],
    "fetch": [
      "sh -c 'cd backend && php index.php -f'"
    ],
    "purge": [
      "rm -rf ./public/api",
      "rm -rf ./resources/faculties/*"
    ],
    "ecs": "./vendor/bin/ecs check --clear-cache",
    "ecsf": "./vendor/bin/ecs check --clear-cache --fix"
  }
}

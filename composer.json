{
  "name": "blumilksoftware/internships",
  "description": "todo",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Internships\\": "backend/"
    }
  },
  "require": {
    "php": "^8.0",
    "php-di/php-di": "^6.3.4",
    "phpunit/phpunit": "^9.5"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^0.4.1"
  },
  "scripts": {
    "build": [
      "rm -rf ./public/api",
      "sh -c 'cd backend && php index.php'"
    ],
    "populate": [
      "sh -c 'cd backend && php index.php -r'"
    ],
    "purge": [
      "rm -rf ./public/api",
      "rm -rf ./resources/faculties/*"
    ],
    "ecs": "./vendor/bin/ecs check --clear-cache",
    "ecsf": "./vendor/bin/ecs check --clear-cache --fix"
  }
}
